            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <warSourceDirectory>${target.dir}/src/main/webapp</warSourceDirectory>
