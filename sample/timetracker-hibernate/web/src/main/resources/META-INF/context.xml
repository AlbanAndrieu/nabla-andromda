<?xml version='1.0' encoding='utf-8'?>
<Context>
  <!-- Normally referenced from resource-ref in web.xml, but not required, left out for server compatibility -->
  <Resource name="jdbc/timetracker" auth="Container"
            type="javax.sql.DataSource"
            description="Timetracker Database for Andromda"
            username="sa"
            password="sa"
            driverClassName="org.h2.Driver"
            url="jdbc:h2:~/timetracker;AUTO_SERVER=TRUE;AUTO_RECONNECT=TRUE;DB_CLOSE_ON_EXIT=FALSE;DB_CLOSE_DELAY=-1"
            maxActive="4"
            maxIdle="2"/>
</Context>
