<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/view/example/UserList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{userHome.wire}"/>

   <param name="userFrom"/>
   <param name="userId" value="#{userHome.userId}"/>


   <navigation from-action="#{userHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/view/example/User.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{userHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/view/example/User.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{userHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/view/example/UserList.xhtml"/>
      </rule>
   </navigation>

</page>
