<?xml version="1.0"?>
<!-- Generated by configuration\log4j.xml.vsl in andromda-gui-cartridge. -->
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="true">

    <!-- Appender for all messages -->
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="LATEST %d{ABSOLUTE} %-5p[%c] %m%n"/>
        </layout>
    </appender>

    <appender name="FILE" class="org.apache.log4j.RollingFileAppender">
        <param name="MaxFileSize" value="1Mb"/>
        <param name="MaxBackupIndex" value="3"/>
        <param name="file" value="/tmp/project.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%7r]%x %6p - %30.30c - %m%n"/>
            <!-- The full pattern: Date MS Priority [Category] (Thread:NDC) Message\n
                <param name="ConversionPattern" value="%d %-5r %-5p [%c] (%t:%x) %m%n"/>
            -->
        </layout>
    </appender>

   <appender name="SOCKETSERV" class="org.apache.log4j.net.SocketAppender">
      <param name="Port" value="4445"/>
      <param name="RemoteHost" value="localhost"/>
      <param name="ReconnectionDelay" value="60000"/>
      <param name="Threshold" value="DEBUG"/>
      <layout class="org.apache.log4j.PatternLayout">
         <!-- The default pattern: Date Priority [Category] Message\n -->
         <param name="ConversionPattern" value="%d{ABSOLUTE} %-5p [%c{1}] %m%n"/>
      </layout>
   </appender>

   <!-- ======================= -->
   <!-- Setup the Root category -->
   <!-- ======================= -->
   <root>
       <priority value="DEBUG"/>
       <!-- To log all messages uncomment the appender CONSOLE -->
       <appender-ref ref="CONSOLE"/>
       <!-- To log debug messages only, uncomment the following appender -->
       <appender-ref ref="FILE"/>
       <!-- To log on chainsaw, uncomment the following appender -->
       <appender-ref ref="SOCKETSERV"/>
   </root>

</log4j:configuration>